class Solution {
public:
    vector<bool> kidsWithCandies(vector<int>& candies, int extraCandies) {
        int n=candies.size();
        int maxcandy=0;
        vector<bool> res;
        for(int i=0;i<n;i++)
        {
            maxcandy=max(maxcandy, candies[i]);
        }
        for(int i=0;i<n;i++)
        {
            if(candies[i]+extraCandies>=maxcandy)
                res.push_back(true);
            
            else
                res.push_back(false);
        }
        return res;
    }
};
